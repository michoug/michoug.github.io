isbn = {4159801940551},
issn = {20452322},
journal = {Scientific Reports},
number = {1},
pages = {1--12},
title = {{Consistent bacterial selection by date palm root system across heterogeneous desert oasis agroecosystems}},
url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85062765691{\&}doi=10.1038{\%}2Fs41598-019-40551-4{\&}partnerID=40{\&}md5=c26d8cc57fa1c067a9c9042a025dbc56},
volume = {9},
