journal = {Environmental Science and Technology},
number = {11},
pages = {6520--6528},
title = {{Water Disinfection Byproducts Increase Natural Transformation Rates of Environmental DNA in Acinetobacter baylyi ADP1}},
url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85066134190{\&}doi=10.1021{\%}2Facs.est.9b00692{\&}partnerID=40{\&}md5=5cbdb8051f45358eb4b8f60f671fb7b7},
volume = {53},
